<% layout('layouts/boilerplate') %>

  <div class="container-fluid">
    <img src="https://fjwp.s3.amazonaws.com/blog/wp-content/uploads/2018/07/01153710/benefits-of-working-from-home.jpg"
      class="img-fluid d-none d-md-block" alt="">
  </div>
  <h1 class="text-white mb-5 text-center mt-5 mb-3 text-muted fw-bolder">Latest News</h1>
  <div class="row row-cols-1 row-cols-md-3 g-4 mb-5">
    <% for(let paper of papers) { %>
      <div class="col">
      <a class="text-decoration-none text-white" href="/news/<%=paper._id %>">

        <div class="card bg-dark">
          <img src="<%=paper.images[0].url %>" class="card-img-top" height="350px" alt="...">
          <div class="card-body">
            <h5 class="card-title">
              <%=paper.title %>
            </h5>
            <p class="card-text">
              <%=paper.description %>
            </p>
          </div>
          <ul class="list-group list-group-flush ">
            <% if(paper.featured){ %>
              <li class="list-group-item bg-dark text-muted">Featured</li>
              <% } %>
          </ul>
          <div class="card-body">

            <a href="/news/<%=paper._id %>" class="card-link text-decoration-none rounded-pill btn btn-danger">Find
              more</a>
          </div>
        </div>
      </a>
  </div>
  <% }%>
    </div>
    <div class="border border-secondary bg-dark px-5 py-5 ">

      <div class="row row-cols-1 row-cols-md-3 g-4 justify-content-end">
        <div class="col">
          <div class="card bg-dark text-muted">
            <div class="card-body">
              <h5 class="card-title text-white mb-3">Company</h5>
              <p class="card-text">About Us</p>
              <p class="card-text">Services</p>
              <p class="card-text">The Team</p>
            </div>
          </div>
        </div>
        <div class="col">
          <div class=" card bg-dark text-muted">
            <div class="card-body">
              <h5 class="card-title text-white mb-3">Resources</h5>
              <p class="card-text">News & Insight</p>
              <p class="card-text">Documentation</p>
              <p class="card-text">Knowledge Base</p>
            </div>
          </div>
        </div>
        <div class="col">
          <div class="card bg-dark text-muted">
            <div class="card-body">
              <h5 class="card-title text-white">Support</h5>
              <p class="card-text">Contact Us</p>
              <p class="card-text">FAQ's</p>
              <p class="card-text">Live charset</p>
            </div>
          </div>
        </div>

      </div>
    </div>