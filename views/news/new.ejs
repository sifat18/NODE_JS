<% layout('layouts/boilerplate') %>
   <div class="row">
    <h1 class="text-center text-white"> Add a News</h1>
       <div class="col-6 offset-3">
        <form action="/news" method="POST" novalidate class="val" enctype="multipart/form-data">
            <section class="mb-3">
            <label class="form-label text-white" for="news_title">Title</label>
            <input class="form-control" type="text" name="news[title]" id="news_title" required>
            <div class="valid-feedback">
                Looks good!
              </div><div class="invalid-feedback">
                Please choose a username.
              </div>
        </section><section class="mb-3 custom-file">
            <!-- <label class="form-label text-white" for="image">Image</label>
            <input class="form-control" type="text" name="news[image]" id="image" placeholder="url" required>
            <div class="valid-feedback">
                Looks good!
              </div><div class="invalid-feedback">
                Please choose a username.
              </div> -->
              <label class="form-label text-white custom-file-label" for="image">Image</label>
              <input class="form-control custom-file-input" type="file" name="image" id="image" multiple>
        </section><section class="mb-3">
            <label class="form-label text-white" for="description">Description</label>
            <textarea class="form-control" cols="60" rows="5" name="news[description]" id="description" required> </textarea>
            <div class="valid-feedback">
                Looks good!
              </div><div class="invalid-feedback">
                Please choose a username.
              </div>
        </section><section class="mb-3">
            <label class="form-label text-white" for="featured">Featured</label>
            <select class="form-control" id="featured" name="news[featured]" required>
                <option value=true>Yes</option>
                <option value=false>No</option>
            </select>
        </section>
        <section class="mb-3">
            <button class="btn btn-success">Submit</button>
        </section>   
            </form>
        
       </div>
   </div>
    

