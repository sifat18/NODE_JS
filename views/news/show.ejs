<% layout('layouts/boilerplate') %>
<div class="row">
    <div class="col-8">
   
    <h1 class="text-white mb-5"><b> <%= p.title %></b></h1>
    <h3 class="text-white "><%= p.author[0].username%></h3>
    <article>
    <% p.images.forEach((img,i)=>{  %> 
        <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
              <div class="carousel-item <%= i===0? 'active': '' %>">
                <img src="<%=img.url %>" class="d-block w-100 img-fluid" alt="...">
              </div>
              <% }) %>
            </div>
            <% if(p.images.length > 1) {%>

            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
            <% } %>

          </div>
    

        </article>
    <article>
            
        <section class="mt-3 mb-3 text-white"><%=p.description%></section>
        <% if(currentUser && p.author[0].equals(currentUser._id)) {%>
        <div class="card-body ">
            <form class="d-inline"action="/news/<%=p._id%>?_method=DELETE" method="POST">
            <button class="btn btn-danger ">Delete</button>
            </form>
            <a class="btn btn-warning " href="/news/<%= p._id %>/edit">Edit</a>
        </div>
        <% } %>
    </article>
       
</div>
<div class="col-4">
    <%if(currentUser) {%>
    <h2 class="fw-bold text-white fs-3 mt-5">Leave a Comment</h2>
   <hr class="bg-white">
    <form action="/news/<%=p._id%>/comments" method="POST" novalidate class="val">
        <div class="mb-3">
            <label class="form-label text-white  fs-5" for="review">Comments</label>
            <textarea class="form-control rounded" name="review[coment]" id="review" cols="20" rows="2" required></textarea>
            <div class="valid-feedback">
                Looks good!
              </div><div class="invalid-feedback">
                Cant Submit Empy Comment.
              </div>
            <button class="mb-3 mt-3 btn btn-success">Submit</button>
        </div>
    </form>
    <% }%>
    <% for(let comment of p.comments) {%>
    <div class="card mb-3 mt-3">
    <div class=" card-body">
        <h5 class="card-title text-muted">By <%= comment.author[0].username%></h5>
        <p class="card-text"><%=comment.coment%></p>
        <% if(currentUser && comment.author[0].equals(currentUser._id)) {%>
        <form action="/news/<%=p._id%>/comments/<%=comment._id%>?_method=DELETE" method="POST">
        <button class="btn btn-sm btn-danger">DELETE</button>
        </form>
        <% } %>
    </div>
    </div>
    <% } %>
</div>
</div>
